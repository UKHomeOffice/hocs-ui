{% extends "GuftBundle:Default:layout.html.twig" %}

{% block title %}Reset password{% endblock %}

{% block menu %} {% endblock %}

{% form_theme resetPasswordForm 'GuftBundle:Default/partials:form.html.twig' %}

{% block content %}
    {% block phasebanner %}{% endblock %}

    <section class="grid-row">
        <section class="column-two-thirds">
            <div>
                {{ form_start(resetPasswordForm, {'attr': {'novalidate' : 'novalidate' }} ) }}

                {% if error is not null %}
                    <div class="global error">{{ error }}</div>
                {% endif %}

                <fieldset class="column-full">
                    <div class="password-policy">
                        <p>For security, your password must be eight or more characters and contain the following:</p>
                        <ul>
                            <li>at least one lower case character</li>
                            <li>at least one upper case character</li>
                            <li>at least one number</li>
                        </ul>
                    </div>

                    <div class="form-group{% if form_errors(resetPasswordForm['currentPassword']) %} error{% endif %}">
                        {{ form_label(resetPasswordForm['currentPassword']) }}
                        {{ form_widget(resetPasswordForm['currentPassword']) }}
                        {{ form_errors(resetPasswordForm['currentPassword']) }}
                    </div>
                    {% for passwordField in resetPasswordForm.newPassword %}
                        <div class="form-group{% if form_errors(passwordField) %} error{% endif %}">
                            {{ form_label(passwordField) }}
                            {{ form_widget(passwordField) }}
                            {{ form_errors(passwordField) }}
                        </div>
                    {% endfor %}
                </fieldset>
                <fieldset class="column-full">
                    {{ form_row(resetPasswordForm.SaveNewPassword) }}
                    <span class="secondary-link">
                        <a href="{{ path('signout') }}">Cancel</a>
                    </span>
                </fieldset>
                {{ form_end(resetPasswordForm) }}
            </div>
        </section>
    </section>


{% endblock %}
