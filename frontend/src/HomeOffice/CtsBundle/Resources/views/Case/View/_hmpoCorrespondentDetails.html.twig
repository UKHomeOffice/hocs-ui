<div class="panel wide" id="constituent_details">
    <h2>Correspondent</h2>
    <div class="page-chunk basic_details">
        <p>
            <label>Reply to:</label>
            <span>
                {% if ctsCase.replyToCorrespondent %}
                    Yes
                {% else %}
                    No
                {% endif %}
            </span>
        </p>
        <p>
            <label>Title:</label>
            <span>{{ ctsCase.correspondentTitle }}</span>
        </p>
        <p>
            <label>Forename:</label>
            <span>{{ ctsHelper.wordWrap(ctsCase.correspondentForename, 22)|nl2br }}</span>
        </p>
        <p>
            <label>Surname:</label>
            <span>{{ ctsHelper.wordWrap(ctsCase.correspondentSurname, 22)|nl2br }}</span>
        </p>
        <p>
            <label>Address:</label>
            <span>{{ ctsHelper.wordWrap(ctsCase.correspondentAddressLine1, 22)|nl2br }}</span>
        </p>
        <p>
            <span class="spacer"></span>
            <span>{{ ctsHelper.wordWrap(ctsCase.correspondentAddressLine2, 22)|nl2br }}</span>
        </p>
        <p>
            <span class="spacer"></span>
            <span>{{ ctsHelper.wordWrap(ctsCase.correspondentAddressLine3, 22)|nl2br }}</span>
        </p>
        <p>
            <label>Postcode:</label>
            <span>{{ ctsCase.correspondentPostcode }}</span>
        </p>
        <p>
            <label>Country:</label>
            <span>{{ ctsCase.correspondentCountry }}</span>
        </p>
    </div>
    <div class="page-chunk basic_details_2">
        <p>
            <label>Telephone:</label>
            <span>{{ ctsCase.correspondentTelephone }}</span>
        </p>
        <p>
            <label>Email:</label>
            <span><a href="mailto:{{ ctsCase.correspondentEmail }}" title="{{ ctsCase.correspondentEmail }}">{{ ctsCase.correspondentEmail[:19] }}{% if ctsCase.correspondentEmail[20:] %}&hellip;{%  endif %}</a></span>
        </p>
        <hr/>
        <p class="double-height">
            <label>Type of correspondent:</label>
            <span>{{ ctsCase.typeOfCorrespondent }}</span>
        </p>
        {% if ctsCase.typeOfCorrespondent == 'Complainant' %}
            <p>
                <label>Type of complainant:</label>
                <span>{{ ctsCase.typeOfComplainant }}</span>
            </p>
        {% endif %}
        {% if ctsCase.typeOfCorrespondent == 'Rep. of complainant' %}
            <p>
                <label>Type of representative:</label>
                <span>{{ ctsCase.typeOfRepresentative }}</span>
            </p>
        {% endif %}
        {% if ctsCase.typeOfCorrespondent == 'Third party' %}
            <p class="double-height">
                <label>Type of third party:</label>
                <span>{{ ctsCase.typeOfThirdParty }}</span>
            </p>
            <p>
                <label>Consent attached:</label>
                <span>
                    {% if ctsCase.consentAttached %}
                        Yes
                    {% else %}
                        No
                    {% endif %}
                </span>
            </p>
        {% endif %}
    </div>
</div>