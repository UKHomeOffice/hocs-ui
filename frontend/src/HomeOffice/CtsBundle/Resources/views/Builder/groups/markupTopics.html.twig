{% if form['markupTopic'] is defined and not form['markupTopic'].isRendered %}
    <div class="form-group">
        <div>
            {{ form_label(form['markupTopic']) }}
            {{ form_widget(form['markupTopic']) }}

            {% if form['markupTopic'].vars.attr['data-standard-lines'] == true %}
                <div class="topic-standard-line" style="font-size:19px; margin:15px 0">
                    <a href="" class="form-read hidden" style="display:none" data-url="{{ path('homeoffice_cts_standardlines_downloadfortopic') }}">
                        Download standard line
                    </a>
                </div>
            {% endif %}
        </div>

        <div>
            <a href="#" class="secondTopicTrigger secondTopicToggle secondTopicShow">Add second topic</a>
            <a href="#" class="secondTopicTrigger secondTopicToggle secondTopicHide hidden">Hide second topic</a>

            <div class="secondTopicToggle hidden">
                {{ form_label(form['secondaryTopic']) }}
                {{ form_widget(form['secondaryTopic']) }}
                {% if form['secondaryTopic'].vars.attr['data-standard-lines'] == true %}
                    <div class="topic-standard-line" style="font-size:19px; margin:15px 0">
                        <a href="" class="form-read hidden" style="display:none" data-url="{{ path('homeoffice_cts_standardlines_downloadfortopic') }}">
                            Download standard line
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endif %}