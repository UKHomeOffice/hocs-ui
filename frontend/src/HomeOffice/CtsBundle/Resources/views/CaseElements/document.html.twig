{% if not documentToggleName is defined %}
    {% set documentToggleName = 'document' %}
{% endif %}

<h3>Upload Document</h3>

<div class="upload{{ documentToggleName }}Toggle">
    <div class="form-group">
        {{ form_label(form['documentType']) }}
        {{ form_widget(form['documentType']) }}
    </div>

    <div class="form-group">
        {{ form_label(form['documentDescription']) }}
        {{ form_widget(form['documentDescription']) }}
    </div>

    <div class="form-group">
        {{ form_label(form['file']) }}
        {{ form_widget(form['file']) }}
        <button class="button-tertiary toggleFile" data-toggle="#{{ form['file'].vars.id }}">
            Browse
        </button>
        <span class="uploadFileName"></span>
    </div>

    <div class="form-group">
        {{ form_widget(form['addDocument']) }}
    </div>
</div>
