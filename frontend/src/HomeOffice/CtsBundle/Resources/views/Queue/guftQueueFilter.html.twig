<div class="expandTarget"{% if showFilters == false %} style="display:none"{% endif %}>
    <section class="grid-row">
        {% if ctsHomeFiltersForm['correspondenceType'] is defined %}
            <div class="column-third">
                {{ form_label(ctsHomeFiltersForm['correspondenceType']) }}
                {{ form_widget(ctsHomeFiltersForm['correspondenceType']) }}
            </div>
        {% endif %}
        {% if ctsHomeFiltersForm['status'] is defined %}
            <div class="column-third">
                {{ form_label(ctsHomeFiltersForm['status']) }}
                {{ form_widget(ctsHomeFiltersForm['status']) }}
            </div>
        {% endif %}
        {% if ctsHomeFiltersForm['team'] is defined %}
            <div class="column-third">
                {{ form_label(ctsHomeFiltersForm['team']) }}
                {{ form_widget(ctsHomeFiltersForm['team']) }}
            </div>
        {% endif %}
        {% if ctsHomeFiltersForm['task'] is defined %}
            <div class="column-third">
                {{ form_label(ctsHomeFiltersForm['task']) }}
                {{ form_widget(ctsHomeFiltersForm['task']) }}
            </div>
        {% endif %}
        {% if ctsHomeFiltersForm['assignedUser'] is defined %}
            <div class="column-third">
                {{ form_label(ctsHomeFiltersForm['assignedUser']) }}
                {{ form_widget(ctsHomeFiltersForm['assignedUser']) }}
            </div>
        {% endif %}
    </section>
    <section class="grid-row">
        <article class="full-column right">
            <span>{{ form_widget(ctsHomeFiltersForm['clear'])}}</span>
            <span>{{ form_widget(ctsHomeFiltersForm['apply']) }}</span>
        </article>
    </section>
</div>
