<div id="constituent_details" class="panel wide">
    <h2>Correspondent</h2>
    <fieldset class="basic_details full_width">
        <div>
            <span class="spacer"></span>
            <div class="spot-control">
                {{ form_widget(ctsCaseForm['replyToCorrespondent']) }}
                {{ form_label(ctsCaseForm['replyToCorrespondent']) }}
            </div>
        </div>
    </fieldset>
    <fieldset class="basic_details">
        <div>
            {{ form_label(ctsCaseForm['correspondentTitle']) }}
            {{ form_widget(ctsCaseForm['correspondentTitle']) }}
        </div>
        <div>
            {{ form_label(ctsCaseForm['correspondentForename']) }}
            {{ form_widget(ctsCaseForm['correspondentForename']) }}
        </div>
        <div>
            {{ form_label(ctsCaseForm['correspondentSurname']) }}
            {{ form_widget(ctsCaseForm['correspondentSurname']) }}
        </div>
        <div class="button-after-input">
            {{ form_label(ctsCaseForm['correspondentPostcode']) }}
            {{ form_widget(ctsCaseForm['correspondentPostcode']) }}
            <a class="button find_address"><span>Find address</span></a>
        </div>
        <div>
            {{ form_label(ctsCaseForm['correspondentAddressLine1']) }}
            {{ form_widget(ctsCaseForm['correspondentAddressLine1']) }}
        </div>
        <div>
            {{ form_label(ctsCaseForm['correspondentAddressLine2']) }}
            {{ form_widget(ctsCaseForm['correspondentAddressLine2']) }}
        </div>
        <div>
            {{ form_label(ctsCaseForm['correspondentAddressLine3']) }}
            {{ form_widget(ctsCaseForm['correspondentAddressLine3']) }}
        </div>
        <div class="last">
            {{ form_label(ctsCaseForm['correspondentCountry']) }}
            {{ form_widget(ctsCaseForm['correspondentCountry']) }}
        </div>
    </fieldset>
    <fieldset class="basic_details_2">
        <div>
            {{ form_label(ctsCaseForm['correspondentTelephone']) }}
            {{ form_widget(ctsCaseForm['correspondentTelephone']) }}
        </div>
        <div class="last">
            {{ form_label(ctsCaseForm['correspondentEmail']) }}
            {{ form_widget(ctsCaseForm['correspondentEmail']) }}
        </div>
        <hr/>
        <div class="medium-label wide-input">
            {{ form_label(ctsCaseForm['typeOfCorrespondent']) }}
            {{ form_widget(ctsCaseForm['typeOfCorrespondent']) }}
        </div>
        {% if ctsCaseForm['typeOfComplainant'] is defined %}
            <div class="medium-label wide-input hmpo-type-of-complainant">
                {{ form_label(ctsCaseForm['typeOfComplainant']) }}
                {{ form_widget(ctsCaseForm['typeOfComplainant']) }}
            </div>
        {% endif %}
        {% if ctsCaseForm['typeOfRepresentative'] is defined %}
            <div class="medium-label wide-input hmpo-type-of-representative">
                {{ form_label(ctsCaseForm['typeOfRepresentative']) }}
                {{ form_widget(ctsCaseForm['typeOfRepresentative']) }}
            </div>
        {% endif %}
        {% if ctsCaseForm['typeOfThirdParty'] is defined %}
            <div class="medium-label wide-input hmpo-type-of-third-party">
                {{ form_label(ctsCaseForm['typeOfThirdParty']) }}
                {{ form_widget(ctsCaseForm['typeOfThirdParty']) }}
            </div>
        {% endif %}
        {% if ctsCaseForm['consentAttached'] is defined %}
            <div class="spot-control hmpo-consent-attached">
                {{ form_widget(ctsCaseForm['consentAttached']) }}
                {{ form_label(ctsCaseForm['consentAttached']) }}
            </div>
        {% endif %}
    </fieldset>
</div>
