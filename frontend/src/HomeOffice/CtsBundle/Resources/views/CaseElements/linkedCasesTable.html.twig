{% if case.linkedCases %}
    <div class="panel">
        <table>
            <thead>
            <tr>
                <th>Name</th>
                {% if not form['linkedCaseToRemove'].vars.read_only %}
                    <th>Actions</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for linkedCase in case.linkedCases %}
                <tr class="linkedCase_{{ linkedCase.nodeId }}">
                    <td>
                        <a href="{{ path('homeoffice_cts_case_view', { 'nodeRef': linkedCase.nodeId }) }}" target="_blank">
                            {{ linkedCase.urn }}
                        </a>
                    </td>

                    {% if not form['linkedCaseToRemove'].vars.read_only %}
                        <td>
                            <a href="#" class="linkedCase-remove" data-value="{{ linkedCase.nodeId }}">Remove</a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {{ form_widget(form['removeLinkedCase']) }}
    {{ form_widget(form['linkedCaseToRemove']) }}
{% endif %}

{% do form.setRendered %}
