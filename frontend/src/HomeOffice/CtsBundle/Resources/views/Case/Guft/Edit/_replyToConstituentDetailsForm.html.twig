<fieldset>
    <div class="column-full">
        <h2>Reply to</h2>
        <div class="form-group" data-stop_list_type="members">
            {{ form_label(ctsCaseForm['member']) }}
            {{ form_widget(ctsCaseForm['member']) }}
        </div>

        <div class="full_width_label stop_list_div{% if (not displayMemberStopListIcon) %} collapsed{% endif %}">
            <div class="stop_list_label">Stop list <b class="icon"></b></div>
        </div>
        {% if ctsCase.correspondenceType == 'MIN' %}
            <div class="form-group">
                {{ form_widget(ctsCaseForm['homeSecretaryReply']) }}
                {{ form_label(ctsCaseForm['homeSecretaryReply']) }}
            </div>
        {% endif %}

        <div class="form-group">
            {{ form_label(ctsCaseForm['mpRef']) }}
            {{ form_widget(ctsCaseForm['mpRef']) }}
        </div>

        <div class="form-group">
            {{ form_label(ctsCaseForm['replyToName']) }}
            {{ form_widget(ctsCaseForm['replyToName']) }}
        </div>
        <div class="form-group">
            {{ form_label(ctsCaseForm['replyToPostcode']) }}
            {{ form_widget(ctsCaseForm['replyToPostcode']) }}
        </div>
        <div class="form-group">
            {{ form_label(ctsCaseForm['replyToAddressLine1']) }}
            {{ form_widget(ctsCaseForm['replyToAddressLine1']) }}
        </div>
        <div class="form-group">
            {{ form_label(ctsCaseForm['replyToAddressLine2']) }}
            {{ form_widget(ctsCaseForm['replyToAddressLine2']) }}
        </div>
        <div class="form-group">
            {{ form_label(ctsCaseForm['replyToAddressLine3']) }}
            {{ form_widget(ctsCaseForm['replyToAddressLine3']) }}
        </div>
        <div class="form-group">
            {{ form_label(ctsCaseForm['replyToCountry']) }}
            {{ form_widget(ctsCaseForm['replyToCountry']) }}
        </div>
        <div class="form-group">
            {{ form_label(ctsCaseForm['replyToTelephone']) }}
            {{ form_widget(ctsCaseForm['replyToTelephone']) }}
        </div>
        <div class="form-group">
            {{ form_label(ctsCaseForm['replyToEmail']) }}
            {{ form_widget(ctsCaseForm['replyToEmail']) }}
        </div>
        {% if ctsCase.correspondenceType == 'IMCM' or ctsCase.correspondenceType == 'IMCB'%}
            <div class="form-group">
                {{ form_widget(ctsCaseForm['replyToNumberTenCopy']) }}
                {{ form_label(ctsCaseForm['replyToNumberTenCopy']) }}
            </div>
                <p>* Mandatory Fields</p>
        {% else %}
            <div class="form-group">
                {{ form_widget(ctsCaseForm['replyToNumberTenCopy']) }}
                {{ form_label(ctsCaseForm['replyToNumberTenCopy']) }}
            </div>
        {% endif %}
    </div>
    <h2>Constituent details</h2>
    <div  class="form-group">
        {{ form_label(ctsCaseForm['correspondentTitle']) }}
        {{ form_widget(ctsCaseForm['correspondentTitle']) }}
    </div>
    <div class="form-group">
        {{ form_label(ctsCaseForm['correspondentForename']) }}
        {{ form_widget(ctsCaseForm['correspondentForename']) }}
    </div>
    <div class="form-group">
        {{ form_label(ctsCaseForm['correspondentSurname']) }}
        {{ form_widget(ctsCaseForm['correspondentSurname']) }}
    </div>
    <div class="form-group">
        {{ form_label(ctsCaseForm['correspondentPostcode']) }}
        {{ form_widget(ctsCaseForm['correspondentPostcode']) }}

    </div>
    <div class="form-group">
        {{ form_label(ctsCaseForm['correspondentAddressLine1']) }}
        {{ form_widget(ctsCaseForm['correspondentAddressLine1']) }}
    </div>
    <div class="form-group">
        {{ form_label(ctsCaseForm['correspondentAddressLine2']) }}
        {{ form_widget(ctsCaseForm['correspondentAddressLine2']) }}
    </div>
    <div class="form-group">
        {{ form_label(ctsCaseForm['correspondentAddressLine3']) }}
        {{ form_widget(ctsCaseForm['correspondentAddressLine3']) }}
    </div>
    <div class="form-group">
        {{ form_label(ctsCaseForm['correspondentCountry']) }}
        {{ form_widget(ctsCaseForm['correspondentCountry']) }}
    </div>
    <div class="form-group">
        {{ form_label(ctsCaseForm['correspondentTelephone']) }}
        {{ form_widget(ctsCaseForm['correspondentTelephone']) }}
    </div>
    <div class="form-group">
        {{ form_label(ctsCaseForm['correspondentEmail']) }}
        {{ form_widget(ctsCaseForm['correspondentEmail']) }}
    </div>
</fieldset>
