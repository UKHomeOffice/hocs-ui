{% extends "GuftBundle:Default:layout.html.twig" %}

{% block title %}Sign in{% endblock %}
{% block menu %} {% endblock %}


{% block content %}
    {% block phasebanner %}{% endblock %}
    {% block bc %}{% endblock %}

    <section class="grid-row">
        <section class="column-half">
            <form action="{{ path('login_check') }}" method="post">
                <fieldset>
                    <div class="form-group{% if error %} error{% endif %}">
                        <label class="form-label" for="username">Username:{% if error %}
                            <span class="error-message">{{ error.message }}</span>{% endif %}
                        </label>
                        <input class="form-control" type="text" id="username" name="_username"
                               value="{{ last_username }}" autofocus/>
                    </div>
                    <div class="form-group{% if error %} error{% endif %}">
                        <label class="form-label" for="password">Password:</label>
                        <input class="form-control" type="password" id="password" name="_password"/>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="button button-start" role="button" value="Sign in"/>
                    </div>
                    <span class="secondary-link">
                        <a href="{{ path('forgotten_password') }}">Forgotten your password?</a>
                    </span>
                </fieldset>
            </form>

        </section>
        {% if messageOfTheDay %}
        <section class="column-half">
                {{ messageOfTheDay | raw}}
        </section>
        {% endif %}
    </section>
{% endblock %}
